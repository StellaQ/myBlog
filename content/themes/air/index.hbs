{{!< default}}
<div class="container clearfix">
  <main role="main" class="content">
    {{#foreach posts}}

      <article class="{{post_class}} post">
        <h3>
          <a href="{{url}}" title="{{title}}">{{title}}</a>
        </h3>
        <footer class="post-info">Posted on
          <span class="post-meta">
            <time datetime="{{date published_at format="YYYY-MM-DD"}}">{{date published_at format="YYYY MMMM Do"}}</time>
            {{tags separator=", " prefix="Tagged in "}}
          </span>
        </footer>
        <p>{{excerpt characters="300"}}&hellip;</p>
        <div class="clearfix">
          <a href="{{url}}" title="{{title}}" class="read-more">Read more &raquo;</a>
        </div>
      </article>

    {{/foreach}}

    {{pagination}}

  </main>
</div>